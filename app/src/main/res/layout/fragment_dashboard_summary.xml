<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragement.DashboardSummaryFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/summary_pie_chart"
            android:layout_width="match_parent"
            android:layout_height="200pt" >
        </com.github.mikephil.charting.charts.PieChart>
       <com.github.mikephil.charting.charts.LineChart
           android:id="@+id/summary_line_chart"
           android:layout_below="@+id/summary_pie_chart"
           android:layout_width="match_parent"
           android:layout_height="200pt" >
       </com.github.mikephil.charting.charts.LineChart>
       <com.github.mikephil.charting.charts.HorizontalBarChart
           android:id="@+id/summary_goal_chart"
           android:layout_width="match_parent"
           android:layout_below="@+id/summary_line_chart"
           android:layout_marginTop="20pt"
           android:layout_height="200pt" >

       </com.github.mikephil.charting.charts.HorizontalBarChart>

   </RelativeLayout>

</ScrollView>